<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.turtle920.easyBBS.LoginActivity">

    <EditText
        android:id="@+id/editText_loginActivity_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:textColor="@color/colorBackground"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText_loginActivity_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBackground"
        android:hint="password"
        android:password="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(new user please type in email and password then click sign up)" />

    <TextView
        android:id="@+id/textView_loginActivity_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorError" />

    <Button
        android:id="@+id/button_loginActivity_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/login_button_bg"
        android:text="Login"
        android:textColor="@color/colorBackground" />

    <Button
        android:id="@+id/button_loginActivity_signUp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/login_button_bg"
        android:text="Sign up"
        android:textColor="@color/colorBackground" />


</LinearLayout>
